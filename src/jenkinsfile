pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/neeraj552/auth-service-springboot-jwt'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean compile'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
    }

    post {
        success {
            echo '✅ Build & Tests Passed'
        }
        failure {
            echo '❌ Tests Failed'
        }
    }
}
